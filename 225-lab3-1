mkdir -p .github/workflow
name: CI/CD pipeline 

on:
  push:
    branches:
     - main
  pull_request:
   branches:
     - main 

job:
build:
runs-on: ubuntu-latest


- name: checkout repository 
    uses: actions/checkout@v3


- name: set up python
  uses: action/setup-python@v3
  with: 
    python-version: '3.8' 
- name: Install dependencis
  run: |
     pip install -r requirements.txt
- name:Run Test 
  run: |
       pytest tests/
